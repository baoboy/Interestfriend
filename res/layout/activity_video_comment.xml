<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        layout="@layout/title_bar" />

    <ScrollView
        android:id="@+id/layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line1"
        android:layout_below="@+id/layout_title"
        android:background="@color/white"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_main_grey"
                android:paddingBottom="20dip"
                android:paddingLeft="50dip" >

                <RelativeLayout
                    android:id="@+id/lay_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_toLeftOf="@+id/img_avatar"
                    android:background="@drawable/growth_right_bg" >

                    <TextView
                        android:id="@+id/txt_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="5dp"
                        android:text="舒淇"
                        android:textColor="#485355"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="2014"
                        android:textColor="@color/gray"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txt_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_user_name"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="无病呻吟"
                        android:textColor="#666666"
                        android:textSize="15sp" />
                    <!-- android:layout_width="130dp" -->
                    <!-- android:layout_height="145dp" -->

                    <RelativeLayout
                        android:id="@+id/ll_click_area"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/txt_content" >

                        <ImageView
                            android:id="@+id/video_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/chat_video_mask_to" >

                            <TextView
                                android:id="@+id/chatting_size_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:text="啊啊啊啊啊啊啊啊"
                                android:textColor="@android:color/white"
                                android:textSize="12.0sp" />

                            <TextView
                                android:id="@+id/chatting_length_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="aaaaaaaaaaaaaaaaaaaaa"
                                android:textColor="@android:color/white"
                                android:textSize="12.0sp" />

                            <ImageView
                                android:id="@+id/chatting_status_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/video_download_btn_nor" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <com.interestfriend.view.RoundAngleImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="10dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_avatar" />
            </RelativeLayout>

            <com.interestfriend.view.ScrollViewWithListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:divider="#d5d5d5"
                android:dividerHeight="0.5dip"
                android:listSelector="#00000000"
                android:scrollbars="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#d5d5d5" />
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_above="@+id/buttom"
        android:background="#EDEDED" />

    <LinearLayout
        android:id="@+id/buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#f7f7f7"
        android:gravity="center"
        android:padding="5dip" >

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入回复内容"
            android:paddingBottom="8dip"
            android:paddingLeft="10dip"
            android:paddingTop="8dip"
            android:scrollbars="vertical"
            android:textSize="16sp" >
        </EditText>

        <Button
            android:id="@+id/btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="@drawable/btn_bg_send"
            android:gravity="center"
            android:paddingBottom="8dip"
            android:paddingLeft="@dimen/scale40dip"
            android:paddingRight="@dimen/scale40dip"
            android:paddingTop="8dip"
            android:text="回复 "
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>