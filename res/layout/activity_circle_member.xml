<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <include
        android:id="@+id/title"
        android:layout_width="fill_parent"
        layout="@layout/title_bar" />

    <com.interestfriend.view.DampView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="match_parent"
                android:layout_height="230dip"
                android:scaleType="centerCrop"
                android:src="@drawable/chat_image_normal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册时间"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_register_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="TextView"
                    android:textColor="@color/txt_desc_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:id="@+id/layout_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="8dip"
                    android:text="TextView"
                    android:textColor="@color/txt_desc_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="男"
                    android:textColor="@color/txt_desc_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1990-05-14"
                    android:textColor="@color/txt_desc_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:id="@+id/layout_declaration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:id="@+id/decl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交友宣言"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_declaration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/decl"
                    android:layout_marginTop="3dip"
                    android:lineSpacingExtra="4dip"
                    android:paddingRight="8dip"
                    android:textColor="@color/txt_desc_color" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:id="@+id/layout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:id="@+id/decr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人介绍"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/decr"
                    android:layout_marginTop="3dip"
                    android:lineSpacingExtra="4dip"
                    android:paddingRight="8dip"
                    android:textColor="@color/txt_desc_color" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip"
                android:text="所加入圈子"
                android:textColor="@color/txt_color" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <com.interestfriend.view.ScrollViewWithListView
                android:id="@+id/circle_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:divider="@color/bg_line"
                android:dividerHeight="0.5dip"
                android:listSelector="#00000000" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />
        </LinearLayout>
    </com.interestfriend.view.DampView>

</RelativeLayout>