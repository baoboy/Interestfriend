<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/circle_item_bg"
        android:padding="7dip" >

        <!-- com.interestfriend.view.RoundAngleImageView -->

        <com.interestfriend.view.RoundAngleImageView
            android:id="@+id/img_circle_logo"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:src="@drawable/picture_default_head" />

        <TextView
            android:id="@+id/txt_circle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="6dip"
            android:layout_toRightOf="@+id/img_circle_logo"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>