<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        layout="@layout/title_bar" />

    <ScrollView
        android:id="@+id/layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line1"
        android:layout_below="@+id/layout_title"
        android:background="@color/bg_color"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dip" >

                <com.interestfriend.view.RoundAngleImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dip"
                    android:layout_marginTop="10dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_avatar" />

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dip"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@+id/img_avatar" >

                    <RelativeLayout
                        android:id="@+id/lay_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/growth_left_bg" >

                        <TextView
                            android:id="@+id/txt_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="5dp"
                            android:text="舒淇"
                            android:textColor="#485355"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="2014"
                            android:textColor="@color/gray"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/txt_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_user_name"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="无病呻吟"
                            android:textColor="#666666"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="300dip"
                            android:layout_height="300dip"
                            android:layout_below="@+id/txt_content"
                            android:layout_gravity="left"
                            android:adjustViewBounds="true"
                            android:maxHeight="300dip"
                            android:maxWidth="300dip"
                            android:scaleType="fitXY"
                            android:visibility="gone" />

                        <com.interestfriend.view.ExpandGridView
                            android:id="@+id/imgGridview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img"
                            android:horizontalSpacing="2dip"
                            android:listSelector="#00000000"
                            android:scrollbars="none"
                            android:verticalSpacing="2dip"
                            android:visibility="visible" >
                        </com.interestfriend.view.ExpandGridView>

                        <View
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dip"
                            android:layout_below="@+id/imgGridview"
                            android:background="#EDEDED" />

                        <com.interestfriend.view.DrawableCenterTextView
                            android:id="@+id/btn_share"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/line"
                            android:drawableLeft="@drawable/icon_share"
                            android:drawablePadding="3dip"
                            android:padding="5dip"
                            android:text="分享"
                            android:textColor="@color/gray" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view_top"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#d5d5d5" />

            <com.interestfriend.view.ScrollViewWithListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:divider="#d5d5d5"
                android:dividerHeight="0.5dip"
                android:listSelector="#00000000"
                android:scrollbars="none" />

            <View
                android:id="@+id/view_bottom"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#d5d5d5" />
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_above="@+id/buttom"
        android:background="#d5d5d5" />

    <LinearLayout
        android:id="@+id/buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#f7f7f7"
        android:gravity="center"
        android:padding="5dip" >

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/comment_edit"
            android:hint="输入回复内容"
            android:paddingBottom="8dip"
            android:paddingLeft="10dip"
            android:paddingTop="8dip"
            android:scrollbars="vertical"
            android:textSize="14sp" >
        </EditText>

        <Button
            android:id="@+id/btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="@drawable/chat_press_speak_btn"
            android:gravity="center"
            android:paddingBottom="6dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="6dip"
            android:text="回复 "
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>