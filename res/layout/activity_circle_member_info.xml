<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <include
        android:id="@+id/title"
        android:layout_width="fill_parent"
        layout="@layout/title_bar" />

    <com.interestfriend.view.DampView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="match_parent"
                android:layout_height="230dip"
                android:scaleType="centerCrop"
                android:src="@drawable/chat_image_normal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:id="@+id/layout_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/left_menu"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/txt_name"
                    android:clickable="false"
                    android:drawablePadding="8dip"
                    android:drawableRight="@drawable/icon_friend_right_arrow"
                    android:gravity="right"
                    android:paddingLeft="10dip"
                    android:text="TextView"
                    android:textColor="@color/txt_desc_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="男"
                    android:textColor="@color/txt_desc_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1990-05-14"
                    android:textColor="@color/txt_desc_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <TextView
                    android:id="@+id/adre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="地区"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/adre"
                    android:drawablePadding="8dip"
                    android:drawableRight="@drawable/icon_friend_right_arrow"
                    android:paddingBottom="13dip"
                    android:paddingTop="13dip"
                    android:text="aaaaaaaa"
                    android:textColor="@color/txt_desc_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册时间"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_register_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="TextView"
                    android:textColor="@color/txt_desc_color" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:id="@+id/layout_declaration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/left_menu"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:id="@+id/decl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交友宣言"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_declaration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/decl"
                    android:layout_marginTop="3dip"
                    android:lineSpacingExtra="4dip"
                    android:paddingRight="8dip"
                    android:textColor="@color/txt_desc_color" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_friend_right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />

            <RelativeLayout
                android:id="@+id/layout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/left_menu"
                android:paddingBottom="13dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="13dip" >

                <TextView
                    android:id="@+id/decr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人介绍"
                    android:textColor="@color/txt_color" />

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/decr"
                    android:layout_marginTop="3dip"
                    android:lineSpacingExtra="4dip"
                    android:paddingRight="8dip"
                    android:textColor="@color/txt_desc_color" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_friend_right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/bg_line" />
        </LinearLayout>
    </com.interestfriend.view.DampView>

</RelativeLayout>